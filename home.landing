        // --- DYNAMIC BACKGROUND & STARS LOGIC ---
        
        // 1. Generate Static Stars
        const starsContainer = document.getElementById('staticStars');
        const starCount = 150; 

        for (let i = 0; i < starCount; i++) {
            const star = document.createElement('div');
